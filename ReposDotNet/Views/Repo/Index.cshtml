@model ReposViewModel;
@{
    <h1>Microsoft GitHub Repos</h1>

    <form asp-controller="Repo" asp-action="Index" method="get">

        <select asp-for="Language" asp-items="Model.Languages">
            <option value="">All</option>
        </select>

        <input asp-for="Page">

        <input asp-for="Size">

        <button class="btn-primary" action="submit">Filter</button>
    </form>

    <label>Total Pages:</label>
    @Html.DisplayFor(model=>model.TotalPages)

    <label>Total Records:</label>
    @Html.DisplayFor(model=>model.TotalRecords)

    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>@Html.DisplayNameFor(model => model.Repos[0].ID)</th>
                <th>@Html.DisplayNameFor(model => model.Repos[0].Name)</th>
                <th>@Html.DisplayNameFor(model => model.Repos[0].Language)</th>
                <th>@Html.DisplayNameFor(model => model.Repos[0].LastUpdated)</th>
            </tr>
        </thead>
        <tbody>
            @{
                byte contador = 0;
            }
            @foreach (var repo in Model.Repos.OrderBy(r=>r.Name))
            {
                contador++;

                <tr>
                    <td>@contador</td>
                    <td>@Html.DisplayFor(modelItem => repo.ID)</td>
                    <td>@Html.DisplayFor(modelItem => repo.Name)</td>
                    <td>@Html.DisplayFor(modelItem => repo.Language)</td>
                    <td>@Html.DisplayFor(modelItem => repo.LastUpdated)</td>
                </tr>
            }
        </tbody>
    </table>
}
